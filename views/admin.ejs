<!DOCTYPE html>
<html lang="en">

<head>
  <title>Buy and Sell</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <!--  Main-layout-override.css -->
  <link rel="stylesheet" href="/styles/main-layout-override.css" />
  <!-- admin.css -->
  <link rel="stylesheet" href="/styles/admin.css">
  <!-- index.css -->
  <link rel="stylesheet" href="/styles/index.css">
  <!-- navigation.css -->
  <link rel="stylesheet" href="/styles/navigation.css">
  <!-- footer.css -->
  <link rel="stylesheet" href="/styles/footer.css">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;600&display=swap" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>

  <!-- Navigation partial view -->
  <%- include('partials/_navigation') %>

  <!-- Admin Welcome Banner -->
  <section class="admin-heading-container">
    <h1 class="admin-welcome-banner">Welcome, Kash ðŸ‘‹</h1>
  </section>



  <!-- Create listing -->
  <Section class="create-listing-container">
    <div class="new-listing">
      <h3 class="new-listing-label">Create New Listing</h3>
      <a class="button" href="/create">Create Listing</a>
    </div>
  </Section>

  <!-- Manage Existing Listings -->
  <div class="admin-heading-container">
    <h3 class="new-listing-label">Manage Your Listings</h3>
  </div>
  <section class="manage-listings-container">
    <!-- Manage Listing Cards -->
    <% for (let listing of listings) { %>
    <div class="listing-card">
      <img class="listing-card-image"src="<%=  listing.image_url %>" alt="Chair">
      <div class="title-price-container">
        <h4 class="listing-card-title"><%=  listing.listing_title %></h4>
      </div>
      <form class="listing-sold-form" action="/admin/<%=  listing.id %>/sold" method="POST">
        <button id="sold-button" type="submit">Mark As Sold</button>
      </form>
      <form class="delete-form" action="/admin/<%=  listing.id %>/delete">
        <button id="delete-button" type="submit">Delete</button>
      </form>
    </div>
    <% } %>
    <!-- End Manage Listing Card -->
  </section>

  <div id="deleted-toast" class="submission-confirmation-toast">
    <p class="">ðŸ—‘ Listing Deleted ðŸ—‘</p>
  </div>

  <div id="sold-toast" class="submission-confirmation-toast">
    <p class="">ðŸ—‘ Listing Marked As Sold ðŸ—‘</p>
  </div>

   <!-- Manage Messages -->
   <div class="admin-heading-container">
    <h3 class="new-listing-label">Manage Your Messages</h3>
   </div>

   <section class="admin-messages-container">
    <!-- First Message -->
    <div class="message-component">
      <div class="message-details">
        <div class="details">
          <h3 class="title">Message ID</h3>
          <p>1</p>
        </div>
        <div class="details">
          <h3 class="title">From</h3>
          <p>Akashdeep Sekhon</p>
        </div>
      </div>
      <div class="message-details">
        <div class="details">
          <h3 class="title">Email Address</h3>
          <p>Kash@hotmail.com</p>
        </div>
        <div class="details">
          <h3 class="title">Message Recieved</h3>
          <p>January 3rd, 2023</p>
        </div>
      </div>
      <div class="message-details">
        <div class="details">
          <h3 class="title">Message</h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus vulputate tempor nibh, sit amet cursus nibh ultrices vitae. Phasellus id lectus pellentesque, convallis lacus id, convallis eros.</p>
        </div>
      </div>
      <div class="button-container">
        <button id="reply-button" class="button">Reply</button>
        <button id="archive-button" class="button">Archive</button>
      </div>
    </div>
   </section>

   <!-- Reply to message modal -->
   <div id="reply-modal" class="modal-container">
    <div class="modal-content">
      <p class="reply-modal-message">Reply to message</p>
      <textarea name="" id="reply-text-area" cols="30" rows="5"></textarea>
      <button class="button">Send</button>
      <button id="reply-cancel" class="button">Cancel</button>
    </div>
   </div>


  <!-- Footer partial view -->
  <%- include('partials/_footer') %>

  <script>
    let replyModal = document.getElementById("reply-modal")
    let replyButton = document.getElementById("reply-button");
    let replyCancel = document.getElementById("reply-cancel");
    let replyTextArea = document.getElementById("reply-text-area");

    //Open reply modal when user click reply button
    replyButton.onclick = function() {
      replyModal.style.display = "block";
    };

    //Close reply modal when user clicks the cancel button
    replyCancel.onclick = function() {
      replyTextArea.value = "";
      replyModal.style.display = "none";
    };

    //Close reply modal if user clicks anywhere outside the modal
    window.onclick = function(event) {
      if (event.target == replyModal) {
        replyTextArea.value = "";
        replyModal.style.display = "none";
      };
    }


    let deleteButton = document.getElementById("delete-button");
    let deleteToast = document.getElementById("deleted-toast");

    deleteButton.onclick = function() {
      deleteToast.style.display = "flex";
    }




  </script>
</body>

</html>
